    <target name="compile.module.compilerbase.production" description="Compile module CompilerBase; production classes">
        <mkdir dir="${compilerbase.output.dir}"/>
        <javac destdir="${compilerbase.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
               memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.compilerbase}/javac">
            <compilerarg line="${compiler.args.compilerbase}"/>
            <bootclasspath refid="compilerbase.module.bootclasspath"/>
            <classpath refid="compilerbase.module.production.classpath"/>
            <src refid="compilerbase.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.compilerbase"/>
        </javac>

        <copy todir="${compilerbase.output.dir}">
            <fileset dir="${module.compilerbase.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
            <fileset dir="${module.compilerbase.basedir}/gen">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

